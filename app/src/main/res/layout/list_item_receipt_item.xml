<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvItemPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rs. 100.00"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvItemQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x 1"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvItemSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 100.00"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- This new TextView will display the discount details when applicable -->
    <TextView
        android:id="@+id/tvItemDiscountInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discount (10%): -Rs. 10.00"
        android:textColor="@color/design_default_color_error"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginStart="8dp"/>

</LinearLayout>
