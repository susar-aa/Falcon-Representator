<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiptActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_receipt"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Order Receipt"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- This container is used for generating the PDF -->
        <LinearLayout
            android:id="@+id/receipt_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FALCON STATIONERY"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tvReceiptDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="Date: 2025-09-21"/>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                tools:text="Customer Name"/>

            <TextView
                android:id="@+id/tvCustomerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Customer Address"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReceiptItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_item_receipt_item"
                tools:itemCount="3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <!-- NEW: Section for Subtotal and Discount -->
            <TextView
                android:id="@+id/tvReceiptSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="Subtotal: Rs. 1000.00"/>

            <TextView
                android:id="@+id/tvReceiptBillDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/design_default_color_error"
                android:textSize="16sp"
                tools:text="Discount (10%): -Rs. 100.00"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvReceiptTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                tools:text="Total: Rs. 900.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:padding="16dp">

            <Button
                android:id="@+id/btnShareText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share as Text"
                style="?attr/materialButtonOutlinedStyle"/>

            <!-- MODIFIED: Button changed from Download to Share PDF -->
            <Button
                android:id="@+id/btnSharePdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share as PDF"/>

            <Button
                android:id="@+id/btnNewOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start New Order"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
