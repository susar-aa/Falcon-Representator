<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvOriginalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Price: Rs. 0.00"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etCustomPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Custom Price per Unit"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <!-- The hint is updated to reflect that this is a percentage -->
    <EditText
        android:id="@+id/etItemDiscount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Discount %"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelChanges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnApplyChanges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"/>
    </LinearLayout>

</LinearLayout>
