<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/btn_edit_customer"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            tools:text="Shop Name Here" />

        <TextView
            android:id="@+id/tv_pending_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_customer_name"
            android:text="Pending Sync"
            android:textColor="@color/design_default_color_error"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_customer_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pending_status"
            android:layout_marginTop="4dp"
            android:drawableStart="@android:drawable/ic_dialog_map"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            tools:text="Route Name" />

        <TextView
            android:id="@+id/tv_customer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_customer_route"
            android:layout_marginTop="4dp"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            tools:text="123, Main Street, City" />

        <ImageButton
            android:id="@+id/btn_delete_customer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete Customer"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/design_default_color_error" />

        <ImageButton
            android:id="@+id/btn_edit_customer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toStartOf="@id/btn_delete_customer"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit Customer"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="?attr/colorPrimary" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
