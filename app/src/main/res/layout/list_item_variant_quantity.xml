<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVariantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Variant Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/tvVariantPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 0.00"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnVariantMinus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_menu_remove"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Decrease quantity"/>

    <EditText
        android:id="@+id/etVariantQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:text="0"
        android:inputType="number"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <ImageButton
        android:id="@+id/btnVariantPlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_add"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Increase quantity"/>

</LinearLayout>

